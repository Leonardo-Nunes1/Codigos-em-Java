import java.util.Scanner;

public class Main{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

       int opcao;
       float soma, subtracao, n1, n2;

        System.out.println("Calculadora Virtual Simples!");
        System.out.println("Selecione(1) para SOMA, (2) para SUBTRACAO: ");
        opcao = scanner.nextInt();

        System.out.printf("Digite o seu primeiro numero: ");
        n1 = scanner.nextFloat();

        System.out.println("Digite o seu segundo numero: ");
        n2 = scanner.nextFloat();

        switch (opcao){
            case 1:
                soma = n1 + n2;
                System.out.printf("%f + %f = %f", n1, n2, soma);
                break;

            case 2:
                subtracao = n1 - n2;
                System.out.printf("%f - %f = %f", n1, n2, subtracao);
                break;
        }


    }
}
